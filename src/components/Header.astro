---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header class="py-6 md:py-8 border-b border-muted flex flex-col md:flex-row justify-between items-center max-w-4xl mx-auto px-4 md:px-6 gap-4 md:gap-0">
	<div class="flex items-center gap-2">
		<div class="w-3 h-3 bg-accent animate-pulse"></div>
		<h1 class="text-xl font-bold tracking-tight">
			<a href="/oding-blog/" class="hover:text-accent transition-colors">{SITE_TITLE}</a>
		</h1>
	</div>
	<nav class="flex gap-4 md:gap-6 text-xs md:text-sm text-neutral-400">
		<HeaderLink href="/oding-blog/blog" class="hover:text-accent transition-colors">[POSTS]</HeaderLink>
		<HeaderLink href="/oding-blog/about" class="hover:text-accent transition-colors">[ABOUT]</HeaderLink>
		<a href="https://github.com/Ssoon-m" target="_blank" class="hover:text-accent transition-colors">[GITHUB]</a>
	</nav>
</header>
