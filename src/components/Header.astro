---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header class="py-8 border-b border-muted flex justify-between items-center max-w-4xl mx-auto px-6">
	<div class="flex items-center gap-2">
		<div class="w-3 h-3 bg-accent animate-pulse"></div>
		<h1 class="text-xl font-bold tracking-tight">
			<a href="/" class="hover:text-accent transition-colors">{SITE_TITLE}</a>
		</h1>
	</div>
	<nav class="flex gap-6 text-sm text-neutral-400">
		<HeaderLink href="/blog" class="hover:text-accent transition-colors">[POSTS]</HeaderLink>
		<HeaderLink href="/about" class="hover:text-accent transition-colors">[ABOUT]</HeaderLink>
		<a href="https://github.com/Ssoon-m" target="_blank" class="hover:text-accent transition-colors">[GITHUB]</a>
	</nav>
</header>
